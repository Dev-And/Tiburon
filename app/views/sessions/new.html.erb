<% provide(:title, 'Sign in') %>
<h1 class="sgn">Вход</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
<%= form_for :session, url: sessions_path,  :html => {:class => "form-horizontal "}  do |f| %>
      <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Введите ваш  email", class: "form-control" %>
      <%= f.label :password %>
        <%= link_to "(Забыли пароль)", new_password_reset_path %>
        <%= f.password_field :password, placeholder: "Введите ваш пароль", class: "form-control" %>
      <%= f.label :remember_me, class: " checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Запомнить меня </span>
      <% end %>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <p id="Haveacc">Если вы еще не зарегестрированы <%= link_to "Регистрация!", signup_path %></p>
        </div>
<% end %>

</div>