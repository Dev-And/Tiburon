<% provide(:title, 'Sign in') %>
<h1 class="sgn">Sign In</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
<%= form_for :session, url: sessions_path,  :html => {:class => "form-horizontal "}  do |f| %>
      <%= f.label :email %>
        <%= f.text_field :email, placeholder: "Enter your email", class: "form-control" %>
      <%= f.label :password %>
        <%= link_to "(forgot password)", new_password_reset_path %>
        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
      <%= f.label :remember_me, class: " checkbox inline" do %>
          <%= f.check_box :remember_me %>
          <span>Remember me </span>
      <% end %>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
      <p id="Haveacc">If you haven't account <%= link_to "Sign up now!", signup_path %></p>
        </div>
<% end %>

</div>