<% provide(:title, 'Sign in') %>
<h1 id="sgn">Sign In</h1>
<%= form_for :session, url: sessions_path,  :html => {:class => "form-horizontal "}  do |f| %>
        <div class="form-group">
      <%= f.label :email, class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.text_field :email, placeholder: "Enter your email", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-md-4 control-label" %>
      <div class="col-md-5">
        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
      </div>
    </div>


    <div class="col-md-offset-4">
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    </div>

    <div class="col-md-offset-4">
      <p id="Haveacc">You have not account <%= link_to "Sign up now!", signup_path %></p>
    </div>
<% end %>